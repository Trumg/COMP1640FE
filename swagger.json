    "components": {
        "schemas": {
            "CreateRoleRequestDto": {
                "required": [
                    "name"
                ],
                "type": "object",
                "properties": {
                    "name": {
                        "minLength": 1,
                        "type": "string",
                        "description": "Name of Role",
                        "example": "Admin"
                    }
                },
                "additionalProperties": false
            },
            "CreateUserRequestDto": {
                "required": [
                    "birthDate",
                    "firstName",
                    "lastName",
                    "password",
                    "username"
                ],
                "type": "object",
                "properties": {
                    "username": {
                        "minLength": 1,
                        "type": "string",
                        "description": "Email Address",
                        "format": "email",
                        "example": "trung@gmail.com"
                    },
                    "password": {
                        "minLength": 1,
                        "type": "string",
                        "description": "Password",
                        "format": "password",
                        "example": "Abcd1234?"
                    },
                    "firstName": {
                        "minLength": 1,
                        "type": "string",
                        "description": "First name",
                        "example": "Lee Nguyen"
                    },
                    "lastName": {
                        "minLength": 1,
                        "type": "string",
                        "description": "Last name",
                        "example": "Khang"
                    },
                    "birthDate": {
                        "type": "string",
                        "description": "Birthdate",
                        "format": "date-time",
                        "example": "2000-12-22T07:16:45.261"
                    }
                },
                "additionalProperties": false
            },
            "LoginRequestDto": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "description": "User Name",
                        "nullable": true,
                        "example": "tranthehao246810@gmail.com"
                    },
                    "password": {
                        "type": "string",
                        "description": "Password",
                        "nullable": true,
                        "example": "Abcd1234?"
                    }
                },
                "additionalProperties": false
            },
            "RegisterRequestDto": {
                "required": [
                    "birthDate",
                    "confirmPassword",
                    "firstName",
                    "lastName",
                    "password",
                    "username"
                ],
                "type": "object",
                "properties": {
                    "username": {
                        "minLength": 1,
                        "type": "string",
                        "description": "Email Address",
                        "format": "email",
                        "example": "tranthehao246810@gmail.com"
                    },
                    "password": {
                        "minLength": 1,
                        "type": "string",
                        "description": "Password",
                        "format": "password",
                        "example": "Abcd1234?"
                    },
                    "confirmPassword": {
                        "minLength": 1,
                        "type": "string",
                        "description": "Confirmed Password",
                        "format": "password",
                        "example": "Abcd1234?"
                    },
                    "firstName": {
                        "minLength": 1,
                        "type": "string",
                        "description": "First name",
                        "example": "Tran The"
                    },
                    "lastName": {
                        "minLength": 1,
                        "type": "string",
                        "description": "Last name",
                        "example": "Hao"
                    },
                    "birthDate": {
                        "type": "string",
                        "description": "Birthdate",
                        "format": "date-time",
                        "example": "2003-04-21T07:16:45.261"
                    }
                },
                "additionalProperties": false
            },
            "UpdateRoleRequestDto": {
                "required": [
                    "name"
                ],
                "type": "object",
                "properties": {
                    "lastUpdatedAt": {
                        "type": "string",
                        "description": "The recent Update time",
                        "format": "date-time",
                        "readOnly": true
                    },
                    "name": {
                        "minLength": 1,
                        "type": "string",
                        "description": "Name of Role",
                        "example": "Admin"
                    }
                },
                "additionalProperties": false
            },
            "UpdateUserRequestDto": {
                "required": [
                    "birthDate",
                    "firstName",
                    "lastName"
                ],
                "type": "object",
                "properties": {
                    "lastUpdatedAt": {
                        "type": "string",
                        "description": "The recent Update time",
                        "format": "date-time"
                    },
                    "firstName": {
                        "minLength": 1,
                        "type": "string",
                        "description": "First name",
                        "example": "Lee Nguyen"
                    },
                    "lastName": {
                        "minLength": 1,
                        "type": "string",
                        "description": "Last name",
                        "example": "Khang"
                    },
                    "bio": {
                        "maxLength": 500,
                        "type": "string",
                        "description": "Biology of User",
                        "nullable": true,
                        "example": "this is me"
                    },
                    "birthDate": {
